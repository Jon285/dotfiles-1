; ------------ Get color from .Xresources ------------ 
[colors]
background   = #18181a
foreground   = ${xrdb:foreground:#ffffff}
colour_blk   = ${xrdb:color0:#ffffff}
colour_gry   = #656565
colour_red   = ${xrdb:color1:#ffffff}
colour_grn   = #99c794
colour_org   = #c08054
colour_ylw   = ${xrdb:color3:#ffffff}
colour_blu   = ${xrdb:color4:#ffffff}
colour_mag   = ${xrdb:color5:#ffffff}
colour_cyn   = ${xrdb:color6:#ffffff}
colour_wht   = ${xrdb:color7:#ffffff}


; ------------------- Configuration -------------------
[bar/default]
dpi                 = 116
height              = 23
line-size           = 0
padding-left        = 1
padding-right       = 1
module-margin-left  = 1
module-margin-right = 1

background          = ${colors.background}
foreground          = ${colors.foreground}
font-0              = Tamzen:size=13;1
font-1              = FontAwesome:size=6;2
font-2              = Wuncon Siji:pixelsize=10;2
font-3              = WenQuanYi WenQuanYi Bitmap Song:size=10;2

modules-left        = date volume battery_icon battery_pect wired-network wireless-network
modules-center      = xwindow
modules-right       = mpd i3

tray-position       = right
tray-padding        = 5
tray-offset-y       = 0%
tray-offset-x       = 0%
tray-maxsize        = 18
tray-detached       = false
tray-transparent    = false
tray-color          = ${colors.background}


; ---------------------- wm --------------------------
[global/wm]
margin-top        = 5
margin-bottom     = 5
wm-restack        = i3
override-redirect = false


; ---------------------- i3 --------------------------
[module/i3]
type                       = internal/i3
pin-workspaces             = true
index-sort                 = true
enable-scroll              = false

ws-icon-0                  = 1;
ws-icon-1                  = 2; 
ws-icon-2                  = 3;
ws-icon-3                  = 4;
ws-icon-4                  = 5;
ws-icon-5                  = 6;
ws-icon-6                  = 7;
ws-icon-7                  = 8;
ws-icon-8                  = 9;
ws-icon-default            =    

label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.colour_gry}
label-mode                 = %mode%
label-mode-padding         = 1
label-mode-background      = ${colors.colour_red}
label-focused              = %icon%
label-focused-foreground   = ${colors.foreground}
label-focused-background   = ${colors.background}
label-focused-padding      = 1
label-unfocused            = %icon%
label-unfocused-padding    = 1
label-visible              = %icon%
label-visible-padding      = 1
label-urgent               = %icon%
label-urgent-foreground    = ${colors.colour_red}
label-urgent-background    = ${colors.background}
label-urgent-padding       = 1


; -------------------- modules -----------------------
[module/xwindow]
type                     = internal/xwindow
label                    = %title:0:75:...%
format-prefix            = " "
format-prefix-foreground = ${colors.colour_blu}


[module/date]
type              = internal/date
interval          = 1
format            =  <label>
label             = %time%
time              = "%H:%M"
time-alt          = "%a %H:%M"
format-foreground = ${colors.colour_red}
label-foreground  = ${colors.foreground}


[module/volume]
type                     = internal/alsa
format-volume            =  <label-volume>
format-muted             =  <label-muted>
label-muted              = Muted
format-volume-foreground = ${colors.colour_org}
format-volume-background = ${colors.background}
label-volume-foreground  = ${colors.foreground}
format-muted-foreground  = ${colors.colour_org}
format-muted-background  = ${colors.background}
label-muted-foreground   = ${colors.foreground}


[module/battery_icon]
type              = custom/script
exec              = ~/.local/bin/polybar/battery_icon
interval          = 3.0
format            = <label>
format-foreground = ${colors.colour_grn}


[module/battery_pect]
type              = custom/script
exec              = ~/.local/bin/polybar/battery
interval          = 3.0
format            = <label>
format-offset     = -15
format-foreground = ${colors.foreground}


[module/wireless-network]
type                           = internal/network
accumulate-stats               = true
interface                      = wlp2s0
interval                       = 5.0
format-connected               = <ramp-signal> <label-connected>
format-connected-foreground    = ${colors.colour_blu}
format-disconnected            =  <label-disconnected>
format-disconnected-foreground = ${colors.colour_blu}
label-connected                = %essid%
label-connected-foreground     = ${colors.foreground}
label-disconnected             = disconnected
label-disconnected-foreground  = ${colors.foreground}
ramp-signal-4                  = 
ramp-signal-3                  = 
ramp-signal-2                  = 
ramp-signal-1                  = 
ramp-signal-0                  = 


[module/wired-network]
type                           = internal/network
accumulate-stats               = true
interface                      = enp0s20u1
interval                       = 5.0
format-connected               =  <label-connected>
format-connected-foreground    = ${colors.colour_blu}
format-disconnected            =  <label-disconnected>
format-disconnected-foreground = ${colors.colour_blu}
label-connected                = %ifname%
label-connected-foreground     = ${colors.foreground}
label-disconnected             = disconnected
label-disconnected-foreground  = ${colors.foreground}


[module/vpn]
type                          = internal/network
interface                     = tun0
interval                      = 5.0
accumulate-stats              = true
format-connected              = VPN: <label-connected>
format-connected-foreground   = ${colors.colour_blu}
format-disconnected           = <label-disconnected>
label-connected               = Connected
label-connected-foreground    = ${colors.foreground}
label-disconnected            = (None)
label-disconnected-foreground = ${colors.foreground}


[module/mpd]
type                  = internal/mpd
host                  = 127.0.0.1
port                  = 6600
interval              = 2
format-online         = <label-song>  <icon-prev> <toggle> <icon-next>
label-song            = %artist% - %title%
label-offline         = mpd is offline
icon-play             = 
icon-pause            = 
icon-prev             = 
icon-next             = 
icon-play-foreground  = ${colors.colour_blu}
icon-pause-foreground = ${colors.colour_blu}
icon-prev-foreground  = ${colors.colour_blu}
icon-next-foreground  = ${colors.colour_blu}
