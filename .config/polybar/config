[module/wireless-network]
type                           = internal/network
accumulate-stats               = true
interface                      = wlp2s0
interval                       = 5.0
format-connected               = <ramp-signal> <label-connected>
format-connected-foreground    = ${colors.colour_blu}
format-disconnected            =  <label-disconnected>
format-disconnected-foreground = ${colors.colour_blu}
label-connected                = %essid%
label-connected-foreground     = ${colors.foreground}
label-disconnected             = disconnected
label-disconnected-foreground  = ${colors.foreground}
ramp-signal-0                  = 
ramp-signal-1                  = 
ramp-signal-2                  = 
ramp-signal-3                  = 
ramp-signal-4                  = 


[module/wired-network]
type                           = internal/network
accumulate-stats               = true
interface                      = enp0s20u1
interval                       = 5.0
format-connected               =  <label-connected>
format-connected-foreground    = ${colors.colour_blu}
format-disconnected            =  <label-disconnected>
format-disconnected-foreground = ${colors.colour_blu}
label-connected                = %ifname%
label-connected-foreground     = ${colors.foreground}
label-disconnected             = disconnected
label-disconnected-foreground  = ${colors.foreground}


[module/vpn]
type                          = internal/network
interface                     = tun0
interval                      = 5.0
accumulate-stats              = true
format-connected              = VPN: <label-connected>
format-connected-foreground   = ${colors.colour_blu}
format-disconnected           = <label-disconnected>
label-connected               = Connected
label-connected-foreground    = ${colors.foreground}
label-disconnected            = (None)
label-disconnected-foreground = ${colors.foreground}


[module/mpd]
type                  = internal/mpd
host                  = 127.0.0.1
port                  = 6600
interval              = 2
format-online         = <icon-prev> <toggle> <icon-next>  <label-song>
label-song            = %artist% - %title%
label-offline         = mpd is offline
icon-play             = 
icon-pause            = 
icon-prev             = 
icon-next             = 
icon-play-foreground  = ${colors.colour_blu}
icon-pause-foreground = ${colors.colour_blu}
icon-prev-foreground  = ${colors.colour_blu}
icon-next-foreground  = ${colors.colour_blu}


[module/lock]
type    = custom/text
