# resize window
mode "  "
{
    # pressing left and up will shrink the window’s width
    # pressing right and down will grow the window’s width
    bindsym $left       resize shrink width 10 px or 10 ppt
    bindsym $down       resize grow height 10 px or 10 ppt
    bindsym $up         resize shrink height 10 px or 10 ppt
    bindsym $right      resize grow width 10 px or 10 ppt
    
    # same bindings, but for the arrow keys
    bindsym Left        resize shrink width 10 px or 10 ppt
    bindsym Down        resize grow height 10 px or 10 ppt
    bindsym Up          resize shrink height 10 px or 10 ppt
    bindsym Right       resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
}
bindsym $mod+r mode "  "

# start i3bar to display a workspace bar
bar
{
    status_command          i3blocks -c ~/.config/i3blocks/i3blocks.conf
    tray_output             primary
    position                top 
    strip_workspace_numbers yes
    separator_symbol        "|"
    workspace_buttons       yes

    colors
    {
        background  #18181a
        statusline  #DDDDDD
        separator   #666666
        
        # class             border  backgr. text
        focused_workspace   #81a2be #81a2be #FFFFFF
        active_workspace    #18181a #18181a #FFFFFF
        inactive_workspace  #18181a #18181a #86888C
        urgent_workspace    #CC6666 #CC6666 #FFFFFF
    }
}

# i3-gaps
for_window [class="^.*"]                border pixel 0
