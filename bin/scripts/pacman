#!/usr/bin/env bash
# pacman 
#
# Get the numbers of available updates.

PACMAN=$(checkupdates | wc -l)
PKGCOUNT=$(ls -A -1 /var/cache/pacman/pkg/ | grep .pkg.tar.xz | wc -l)
echo "$PACMAN/$PKGCOUNT"


case $BLOCK_BUTTON in
    # left click, check arch linux package search.
    1) chromium https://www.archlinux.org/packages/ ;;
esac
